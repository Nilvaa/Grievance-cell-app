<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".student.AppointmentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mauve"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/paprika"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_marginLeft="310dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/recent"
            android:id="@+id/recent"
            android:layout_gravity="end"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/paprika"
                android:hint="Appointment Title"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/mauve"
                android:textColorHint="@color/mauve" />
            <EditText
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/paprika"
                android:hint="Appointment Description"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/mauve"
                android:textColorHint="@color/mauve" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pro"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:padding="3dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/paprika"
                android:background="@drawable/edittext"
                android:textColor="@color/mauve"
                android:textColorHint="@color/mauve" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sent"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:padding="3dp"
                android:fontFamily="@font/paprika"
                android:background="@drawable/edittext"
                android:textColor="@color/mauve"
                android:textColorHint="@color/mauve" />
            <Button
                android:id="@+id/btnreg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/mauve"
                android:fontFamily="@font/paprika"
                android:padding="10dp"
                android:text="Request Appointment"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout></ScrollView>