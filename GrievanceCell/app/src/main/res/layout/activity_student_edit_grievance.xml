<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".student.Student_edit_grievance">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mauve"
            android:padding="10dp"
            android:id="@+id/toolbar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grievance"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/paprika"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/type"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="3dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/paprika"
                    android:background="@drawable/edittext"
                    android:textColor="@color/mauve"
                    android:textColorHint="@color/mauve" />
                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/paprika"
                    android:hint="Date of Grievance"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/mauve"
                    android:textColorHint="@color/mauve" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pro"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="3dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/paprika"
                    android:background="@drawable/edittext"
                    android:textColor="@color/mauve"
                    android:textColorHint="@color/mauve" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sent"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:padding="3dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/paprika"
                    android:background="@drawable/edittext"
                    android:textColor="@color/mauve"
                    android:textColorHint="@color/mauve" />
                <EditText
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edittext"
                    android:fontFamily="@font/paprika"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textColor="@color/mauve"
                    android:textColorHint="@color/mauve" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paprika"
                android:text="Add Proof"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mauve"/>
            <ImageView
                android:id="@+id/add_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/picture_frame"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/tableRow1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cam"
                    android:layout_width="46dp"
                    android:layout_height="45dp"
                    android:background="@drawable/camera" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <ImageView
                    android:id="@+id/gal"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/gallery" />

            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/btnreg"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/mauve"
            android:fontFamily="@font/paprika"
            android:padding="10dp"
            android:text="Sent Grievance"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>