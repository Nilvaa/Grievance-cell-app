<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adaptor.Faculty_view_grie_adaptor">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"><ImageView
            android:id="@+id/imgei"
            android:layout_width="match_parent"
            android:layout_margin="0dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:scaleType="fitXY" />


            <TextView
                android:id="@+id/pnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="name:"></TextView>
            <TextView
                android:id="@+id/dnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="name:"></TextView>


            <TextView
                android:id="@+id/iss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="issue"></TextView>
            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/paprika"
                android:textColor="@color/mauve"
                android:text="Description"></TextView>


            <Button
                android:id="@+id/btnsch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/mauve"
                android:fontFamily="@font/paprika"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Send Reply"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>